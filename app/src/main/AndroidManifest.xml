<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ntg.resttest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.PokemonInfoActivity" android:parentActivityName=".activities.PokemonListActivity" android:label="@string/pokemon_info_title" />
        <activity android:name=".activities.PokemonListActivity" android:parentActivityName=".activities.MainActivity" android:label="@string/pokemon_list_title" />
        <activity android:name=".activities.MainActivity" android:label="@string/home_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>